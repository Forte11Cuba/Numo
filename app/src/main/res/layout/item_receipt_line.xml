<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="14dp">

    <!-- Main Item Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top">

        <!-- Quantity Badge -->
        <TextView
            android:id="@+id/item_quantity"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_quantity_badge"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/color_text_primary"
            android:fontFamily="sans-serif-medium"
            tools:text="2" />

        <!-- Item Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp">

            <!-- Item Name -->
            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_text_primary"
                android:fontFamily="sans-serif-medium"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="Cappuccino - Large" />

            <!-- Unit Price -->
            <TextView
                android:id="@+id/item_unit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:textColor="@color/color_text_tertiary"
                tools:text="$4.50 each" />

        </LinearLayout>

        <!-- Line Total -->
        <TextView
            android:id="@+id/item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/color_text_primary"
            android:fontFamily="sans-serif-medium"
            tools:text="$9.00" />

    </LinearLayout>

    <!-- VAT Detail (optional - only shown if VAT applies) -->
    <LinearLayout
        android:id="@+id/vat_detail_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginStart="40dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/vat_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="@color/color_text_tertiary"
            tools:text="incl. 20% VAT" />

        <TextView
            android:id="@+id/vat_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/color_text_tertiary"
            tools:text="$1.50" />

    </LinearLayout>

</LinearLayout>
