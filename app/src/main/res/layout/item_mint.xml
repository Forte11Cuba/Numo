<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mint_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/color_bg_card"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Mint icon avatar -->
        <ImageView
            android:id="@+id/mint_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_circle"
            android:contentDescription="Mint icon"
            android:padding="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_bitcoin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Lightning indicator (radio button) -->
        <RadioButton
            android:id="@+id/lightning_mint_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:contentDescription="Select as Lightning mint"
            android:drawableStart="@drawable/ic_lightning_small"
            android:drawablePadding="0dp"
            android:minWidth="28dp"
            android:minHeight="28dp"
            android:padding="4dp"
            app:layout_constraintStart_toEndOf="@id/mint_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Mint name (from mint info, or host if no name) -->
        <TextView
            android:id="@+id/mint_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/Text.Body"
            android:textColor="@color/color_text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/lightning_mint_radio"
            app:layout_constraintEnd_toStartOf="@id/remove_mint_button"
            app:layout_constraintStart_toEndOf="@id/lightning_mint_radio"
            app:layout_constraintTop_toTopOf="@id/lightning_mint_radio" />

        <!-- Mint URL (fixed-width font, grey) -->
        <TextView
            android:id="@+id/mint_url_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:textColor="@color/color_text_secondary"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lightning_mint_radio" />

        <!-- Balance row -->
        <LinearLayout
            android:id="@+id/balance_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mint_url_text">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance:"
                android:textAppearance="@style/Text.Caption"
                android:textColor="@color/color_text_secondary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/mint_balance_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:text="Loading..."
                android:textAppearance="@style/Text.Body"
                android:textColor="@color/color_text_primary"
                android:textSize="14sp" />

            <!-- Loading indicator -->
            <ProgressBar
                android:id="@+id/balance_loading"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:indeterminate="true"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Withdraw button -->
        <Button
            android:id="@+id/withdraw_button"
            style="@style/Widget.Button.Secondary.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="0dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:text="Withdraw"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/balance_container" />

        <!-- Remove button -->
        <ImageButton
            android:id="@+id/remove_mint_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Remove mint"
            android:minWidth="36dp"
            android:minHeight="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_delete"
            android:tint="@color/color_icon_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
